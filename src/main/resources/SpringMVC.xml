<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- 在SpringMVC中引入自定义资源文件 -->
    <context:property-placeholder location="classpath:resource.properties"/>

    <!-- 开启对Controller的注解扫描 -->
    <context:component-scan base-package="com.ssm.crm.controller"></context:component-scan>

    <!-- 开启注解驱动，自动配置映射器和适配器 -->
    <mvc:annotation-driven/>

    <!--放行静态资源，前提dispatcherServlet包含这些请求-->
    <mvc:resources location="/WEB-INF/static/js/" mapping="/js/**"/>
    <mvc:resources location="/WEB-INF/static/fonts/" mapping="/fonts/**"/>
    <mvc:resources location="/WEB-INF/static/css/" mapping="/css/**"/>

    <!--<mvc:resources location="/WEB-INF/views/" mapping="*.jsp"/>-->
    <!-- 一次配置所有，但不建议映射到根目录 -->
    <!--<mvc:resources location="WEB-INF/static/" mapping="/**" />-->

    <!--通过配置实现简单的Controller-->
    <mvc:view-controller path="/index" view-name="index"/>

    <!--根路径重定向到/customer/list-->
    <mvc:view-controller path="/" view-name="redirect:/customer/list"/>

    <!-- 视图解析器 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"></property>
        <property name="suffix" value=".jsp"></property>
    </bean>

</beans>